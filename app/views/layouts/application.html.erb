<!DOCTYPE html>
<html>
<head>
  <title>Codiki</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class='half_page' id='logo'>
      <h1><%= link_to 'Codiki', '/' %></h1>
  </div>
  <div class='one_fourth linkNav'>
    <div class='menu-wrap nav'>
          <nav class="menu">
              <ul>
                <li>
                    <a href="#"><span class="arrow">&#9660;</span></a>
                    <ul class="sub-menu">
                        <li><%= link_to 'Categories', categories_path %></li>
                        <li><%= link_to 'Contributors', contributors_path %></li>
                        <li><%= link_to 'About', about_path %></li>
                        <li><%= link_to 'Contact', contact_path %></li>
                    </ul>
                </li>
              </ul>
          </nav>
      </div>
      <div class='nav'>
          <% if current_contributor %>
              <p><%= link_to 'Log Out', '/logout' %><p>
          <% else %>
              <p><%= link_to 'Log In', '/login' %><p>
          <% end %>
      </div>
      <div class='nav'>
          <% if !current_contributor %>
            <p><%= link_to 'Register', new_contributor_path %></p>
          <% end %>
      </div>
      <div class='nav'>
          <% if current_contributor %>
            <p>Logged in as: <%= link_to current_contributor.first_name, contributor_path(current_contributor.id) %></p>
          <% end %>
      </div>

    </div>
</header>

<%= yield %>

<footer>
  <div class='one_fourth'>
      <ul class='guide'>
          <li><%= link_to 'Home', '/' %></li>
          <li><%= link_to 'About', about_path %></li>
          <li><%= link_to 'Register', new_contributor_path %></li>
          <li><%= link_to 'Contact', contact_path %></li>
      </ul>
  </div>
  <div class='one_fourth'>
      <ul class='guide'>
          <li><%= link_to 'Categories', categories_path %></li>
          <li><%= link_to 'Articles', articles_path %></li>
          <li><%= link_to 'Contributors', contributors_path %></li>
      </ul>
  </div>
  <div class='one_fourth'>
      <ul class='guide'>
          <li><%= link_to 'Login', login_path %></li>
          <% if current_contributor %>
          <li><%= link_to 'Create New Category', new_category_path %></li>
          <li><%= link_to 'Create New Article', new_article_path %></li>
          <% end %>

      </ul>
  </div>
  <hr />
  <p id='copyright'>Copyright&#x000A9;2015</p>
</footer>
</body>
</html>
