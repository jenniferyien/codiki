<div class='categoryHead'>
  <div class='one_fourth categoryNotice'>
      <h1><%= @category.title %></h1>
  </div>
  <div class='half_page blurb'>
      <p><%= @category.summary %></p>
  </div>
</div>
<div>
  <div class='three_fourth'>
    <div class='category'>
      <h3><%= @category.title %>:Articles:</h3>
    </div>
    <hr />
    <div class='category'>
      <% @articles.each do |article| %>
          <% if article.category_id == @category.id %>
          <h2><%= article.title %></h2>
          <p><%= markdown(truncate("#{article.content}",length: 350)) %></p>
          <button><%= link_to 'View More', article %></button>
          <% end %>
      <% end %>
    </div>
  </div>
</div>
