<div class='categoryHead'>
  <div class='one_fourth title'>
      <h1><%= @article.category.title %></h1>
  </div>
  <div class='half_page blurb'>
      <p><%= @article.category.summary %></p>
      <button><%= link_to "For more Articles on #{@article.category.title}", category_path("#{@article.category.id}") %></button>
  </div>
</div>
<div>
    <div id='articleNote'>
      <div class='half_page'>
          <h3><%= link_to "#{@article.category.title}", category_path("#{@article.category.id}") %>:Article:</h3>
      </div>
      <div class='half_page'>
        <% if current_contributor %>
          <p><%= link_to 'Edit Article', edit_article_path(@article) %><p>
        <% end %>
      </div>
    </div>
    <hr />
    <div id='actualArticle'>
      <div class='half_page'>
        <h2><%= @article.title %></h2>
      </div>
      <div class='half_page' id='update'>
        <p id='timestamp'><%= @article.updated_at %></p>
        <p>
          <strong>Updated:</strong>
          <%= time_ago_in_words(@article.updated_at) %>
        </p>
      </div>
      <div class='three_fourth'>
          <p>
            <strong>By:</strong>
            <%= "#{@article.contributor.first_name} #{@article.contributor.last_name}" %>
          </p>
      </div>
      <div class='full_page'>
        <p><%= markdown("#{@article.content}") %></p>
      </div>
    </div>

</div>
